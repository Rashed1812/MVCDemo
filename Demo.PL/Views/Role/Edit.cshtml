    @model RoleViewModel
@{
	ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-content-center mt-3">
	<h1 class="col-8 my-4">Edit User</h1>
	<form method="post" asp-controller="Role" asp-action="Edit" class="row col-8">
		<div asp-validation-summary="ModelOnly"></div>

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<h3>Assign Users To Roles</h3>
		<div class="form-group">
			@for (int i = 0; i < Model.Users.Count; i++)
			{
				<div class="form-check">
					<input asp-for="Users[i].UserId" type="hidden" />
					<input asp-for="Users[i].UserName" type="hidden" />
					<input asp-for="Users[i].IsSelected" class="form-check-input" type="checkbox" />
					<label asp-for="Users[i].IsSelected" class="form-check-label">@Model.Users[i].UserName</label>
				</div>
			}
		</div>

		<div class="mt-4 m-auto">
			<input class="btn btn-success" type="submit" value="Save" />
			<a asp-controller="Role" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
		</div>
	</form>
</div>
