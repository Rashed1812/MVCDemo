@model UserViewModel
@{
	ViewData["Title"] = "Details";
}

<h1 class="my-5 w-75">Users Details</h1>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Id"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" readonly />
            </div>

        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" class="btn btn-outline-dark">Edit</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
    </div>
</div>

